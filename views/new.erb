<form method="post" action="/students" class="new-student-form" >
    <div class=new-student-form>
        <label for="first-name-enter">First name</label>
        <input type="text" id="first-name-enter" name="first_name">
    </div>
    <div class=new-student-form>
        <label for="second-name-enter">Second name</label>
        <input type="text" id="second-name-enter" name="second_name">
    </div>
    <div class=new-student-form>
        <label for="house-enter">Enter your House</label>
        <select id="house-enter" name="house_id">
            <% @all_houses.each do |house| %>
               <option value="<%=house.id()%>"><%=house.name%></option>
            <% end %>
        </select>
    </div>
    <div class=new-student-form>
        <label for="age-enter">Enter age</label>
        <input type="number" id="age-enter" name="age">
    </div>
    <div class=new-student-form>
        <input type="submit" value="Submit your soul"/>
    </div>
</form>